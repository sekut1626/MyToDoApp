<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.sebastian.mytodoapp.activity.NoteActivity"
    tools:showIn="@layout/app_bar_statistic">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moje statystyki:"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba dodanych zadań: "
        android:layout_marginTop="128dp"
        android:id="@+id/sta1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#0228e5"
        android:id="@+id/stat1"
        android:layout_alignBaseline="@id/sta1"
        android:layout_alignBottom="@+id/sta1"
        android:layout_toRightOf="@+id/sta1"
        android:layout_toEndOf="@+id/sta1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba aktualnych zadań: "
        android:id="@+id/sta2"
        android:layout_below="@+id/sta1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat2"
        android:text="0"
        android:textColor="#d3d3d3"
        android:layout_alignBaseline="@id/sta2"
        android:layout_alignBottom="@+id/sta2"
        android:layout_toRightOf="@+id/sta2"
        android:layout_toEndOf="@+id/sta2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba wykonanych zadań: "
        android:id="@+id/sta3"
        android:layout_below="@+id/sta2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat3"
        android:text="0"
        android:textColor="#21e728"
        android:layout_alignBaseline="@id/sta3"
        android:layout_alignBottom="@+id/sta3"
        android:layout_toRightOf="@+id/sta3"
        android:layout_toEndOf="@+id/sta3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba usuniętych zadań: "
        android:id="@+id/sta4"
        android:layout_below="@+id/sta3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat4"
        android:text="0"
        android:textColor="#d81ad8"
        android:layout_alignBaseline="@id/sta4"
        android:layout_alignBottom="@+id/sta4"
        android:layout_toRightOf="@+id/sta4"
        android:layout_toEndOf="@+id/sta4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba dodanych notatek: "
        android:id="@+id/sta5"
        android:layout_below="@+id/sta4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat5"
        android:text="0"
        android:textColor="#fc0505"
        android:layout_alignBaseline="@id/sta5"
        android:layout_alignBottom="@+id/sta5"
        android:layout_toRightOf="@+id/sta5"
        android:layout_toEndOf="@+id/sta5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba usuniętych notatek: "
        android:id="@+id/sta6"
        android:layout_below="@+id/sta5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat6"
        android:text="0"
        android:textColor="#f2df06"
        android:layout_alignBaseline="@id/sta6"
        android:layout_alignBottom="@+id/sta6"
        android:layout_toRightOf="@+id/sta6"
        android:layout_toEndOf="@+id/sta6" />



    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/wykres"></com.github.mikephil.charting.charts.PieChart>



</RelativeLayout>
